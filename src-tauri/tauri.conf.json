{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Melorium",
  "version": "0.1.0",
  "identifier": "primalcat.melorium",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Melorium",
        "width": 1000,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["portable-git"]
  }
}
